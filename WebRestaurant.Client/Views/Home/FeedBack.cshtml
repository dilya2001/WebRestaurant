@model WebRestaurant.Shared.Dtos.FeedBackDto

@{
    ViewData["Title"] = "Create";
    ViewBag.Title = "Связь с нами";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-8">
        <form asp-action="FeedBack" class="form-contact contact_form" method="post" id="contactForm" novalidate="novalidate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <textarea asp-for="Context" class="form-control w-100" id="message" cols="30" rows="9" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Введите сообщение'" placeholder="Введите сообщение" required></textarea>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <input asp-for="Email" class="form-control valid" id="email" type="email" value="@User.Identity.Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" placeholder="Email" required>
                        } else
                        {
                            <input asp-for="Email" class="form-control valid" id="email" type="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" placeholder="Email" required>
                        }
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <input asp-for="Title" class="form-control" id="subject" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Тема сообщения'" placeholder="Тема сообщения" required>
                    </div>
                </div>

                <input type="hidden" asp-for="CreateTime" value="@DateTime.Now" class="form-control" />

            </div>
            <div class="form-group mt-3">
                <button type="submit" class="button button-contactForm boxed-btn">Отправить</button>
            </div>
        </form>
    </div>
    <div class="col-lg-3 offset-lg-1">
        <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-home"></i></span>
            <div class="media-body">
                <h3>Калининградская область, г. Шаховская</h3>
                <p>наб. Сталина, 50</p>
            </div>
        </div>
        <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-tablet"></i></span>
            <div class="media-body">
                <h3>+8 800 555 3535</h3>
                <p>С Пн по Пт, 10:00 - 20:00</p>
            </div>
        </div>
        <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-email"></i></span>
            <div class="media-body">
                <h3>mail@mail.com</h3>
                <p>Отправьте нам свой запрос в любое время!</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
