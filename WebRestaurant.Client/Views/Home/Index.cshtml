<script>
    function showIngredients(id) {
        var ingredients = document.getElementById("ingredients-" + id);
        if (ingredients.style.display === "none") {
            ingredients.style.display = "block";
        } else {
            ingredients.style.display = "none";
        }
    }
</script>
