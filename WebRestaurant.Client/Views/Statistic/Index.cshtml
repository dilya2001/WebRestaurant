@model WebRestaurant.Shared.Model.StatisticalModel
@{
    ViewBag.Title = "Статистика по проданным блюдам";
}

<h2>Статистика по проданным блюдам</h2>

<canvas id="myChart" width="400" height="200"></canvas>

<script>
    var labelsX = @Html.Raw(Json.Serialize(Model.Labels));
    var dataX = @Html.Raw(Json.Serialize(Model.Data));

    var ctx = document.getElementById("myChart").getContext("2d");
    var myChart = new Chart(ctx, {
        type: "bar",
        data: {
            labels: labelsX,
            datasets: [{
                label: "Продажи",
                data: dataX,
                backgroundColor: "rgba(75, 192, 192, 0.2)",
                borderColor: "rgba(75, 192, 192, 1)",
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>